<%= form_with(model: profile, class: "form", html: { autocomplete: "off" }) do |form| %>
  <div>
    <%= form.label :display_name, style: "display: block" %>
    <%= form.text_field :display_name %>
  </div>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :website, style: "display: block" %>
    <%= form.text_field :website %>
  </div>

  <div>
    <%= form.label :pronouns, style: "display: block" %>
    <%= form.text_field :pronouns %>
  </div>

  <div>
    <%= form.label :bio, style: "display: block" %>
    <%= form.text_area :bio, maxlength: 400 %>
  </div>

  <div>
    <%= form.label :birthday, style: "display: block" %>
    <%= form.date_field :birthday %>
  </div>

  <!--  <div>-->
  <%#= form.label :profile_picture, style: "display: block" %>
  <%#= form.text_field :profile_picture %>
  <!--  </div>-->

  <!--  <div>-->
  <%#= form.label :banner_picture, style: "display: block" %>
  <%#= form.text_field :banner_picture %>
  <!--  </div>-->

  <div>
    <%= form.submit class: 'button button--primary' %>
  </div>
<% end %>
