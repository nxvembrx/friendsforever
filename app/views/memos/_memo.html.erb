<article id="<%= dom_id memo %>" class="card memo">
  <%= link_to user_path(memo.user.username) do %>
    <%= render partial: "users/user-pill", locals: { user: memo.user } %>
  <% end %>
  <div class="memo__body">
    <%= memo.body %>
  </div>
  <footer class="memo__footer">
    <div class="memo__footer__actions">
      <!--      current_user.bookmarks.exists?(memo_id: memo.id) ? :delete :-->
      <!--      TODO: Keep in mind for possible refactoring -->
      <% if memo.bookmarked_by?(current_user) %>
        <%= button_to memo.bookmark_of(current_user), method: :delete do %>
          <%= image_tag "svg/filled/bookmark.svg" %>
        <% end %>
      <% else %>
        <%= button_to bookmarks_path(memo_id: memo.id) do %>
          <%= image_tag "svg/outline/bookmark.svg" %>
        <% end %>
      <% end %>
      <%= button_to '' do %>
        <%= image_tag 'svg/repost.svg' %>
      <% end %>
      <%= button_to '' do %>
        <%= image_tag 'svg/comment.svg' %>
      <% end %>
    </div>
    <time class="memo__footer__timestamp" datetime="<%= memo.created_at %>">
      <%= link_to "#{time_ago_in_words(memo.created_at)} ago", memo %>
    </time>
  </footer>
</article>
