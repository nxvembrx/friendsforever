<div id="<%= dom_id memo %>" class="card memo">
  <div class="author">
    <%= render partial: "shared/profile_picture", locals: { user: memo.user } %>
    <div class="author-name">
      <div class="display-name">
        <%= memo.user.display_name || memo.user.username %>
      </div>
      <div class="username">
        @<%= memo.user.username %>
      </div>
    </div>
  </div>
  <div class="body">
    <%= memo.body %>
  </div>
  <%= time_ago_in_words(memo.created_at) %> ago
</div>
