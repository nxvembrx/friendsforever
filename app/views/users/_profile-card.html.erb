<div class="card user-profile">
  <div class="user-profile__banner">
    <img src="https://picsum.photos/id/93/700/300">
  </div>
  <%= render partial: "shared/profile-picture", locals: { user: user } %>
  <div class="user-profile__details">
    <div class="user-profile__details__names">
      <h1>
      <span class="user-profile__details__names__display">
        <%= user.profile.display_name || user.username %>
      </span>
        <span class="user-profile__details__names__handle">
        <%= "@#{user.username}" %>
          <span class="user-profile__details__names__pronouns">
          <%= user.profile.pronouns %>
        </span>
      </span>
      </h1>
      <%= render partial: "profile-action-button", locals: { user: @user } %>
    </div>
    <div class="user-profile__details__bio">
      <%= user.profile.bio %>
    </div>
    <div class="user-profile__details__secondary-info">
      <% unless user.profile.location.blank? %>
        <span class="location">
          <%= image_tag "svg/location.svg" %>
          <%= user.profile.location %>
        </span>
      <% end %>
      <% unless user.profile.website.blank? %>
        <span class="website">
          <%= image_tag "svg/link.svg" %>
          <%= user.profile.website %>
        </span>
      <% end %>
    </div>
  </div>
</div>
