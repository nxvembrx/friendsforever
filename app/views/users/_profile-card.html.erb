<div class="card user-profile">
  <div class="user-profile__banner">
    <img src="https://picsum.photos/id/70/700/300">
  </div>
  <%= render partial: "shared/profile-picture", locals: { user: user } %>
  <div class="user-profile__details">
    <div class="user-profile__details__names">
      <h1>
      <span class="user-profile__details__names__display">
        <%= user.display_name || user.username %>
      </span>
        <span class="user-profile__details__names__handle">
        <%= "@#{user.username}" %>
          <span class="user-profile__details__names__pronouns">
          <%= user.pronouns %>
        </span>
      </span>
      </h1>
      <div class="user-profile__details__names__edit-profile">
        <button class="button button--secondary" style="padding: 10px">Edit profile</button>
      </div>
    </div>
    <div class="user-profile__details__bio">
      <%= user.bio %>
    </div>
    <div class="user-profile__details__secondary-info">
      <span class="location">
        <%= image_tag "svg/outline/location" %>
        <%= user.location %>
      </span>
      <span class="website">
        <%= image_tag "svg/outline/link" %>
        <%= user.website %>
      </span>
    </div>
  </div>
</div>